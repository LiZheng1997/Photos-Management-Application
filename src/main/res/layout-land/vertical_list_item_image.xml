<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_layout_margin"
    app:cardCornerRadius="@dimen/card_corner_radius">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/vertical_image_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_list_item_height"
            android:contentDescription="@string/Photo_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/vertical_image_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/component_padding"
            android:text="@string/title_text"
            android:textSize="12sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>